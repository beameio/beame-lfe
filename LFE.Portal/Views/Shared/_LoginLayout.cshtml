@using LFE.Portal.Helpers

<!DOCTYPE html>
<html>
<head>
    @Html.Partial("~/Views/Shared/Common/_RedirectSSL.cshtml")
    <title>@ViewBag.Title</title>
    <!--[if ie]><meta http-equiv="X-UA-Compatible" content="IE=Edge"/><![endif]-->
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/kendo/" + Url.ToKendoVersionUrl() + "/css")

    @Styles.Render("~/Content/styles/common")

    @Scripts.Render("~/bundles/modernizr")

    <!--[if lt IE 9]>
        <script src="http://css3-mediaqueries-js.googlecode.com/svn/trunk/css3-mediaqueries.js"></script>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <script src="@Url.Content("~/Scripts/plugins/jquery.placeholder.js")"></script>
    <![endif]-->

    @Scripts.Render("~/bundles/jquery/jquery")

    @Scripts.Render("~/bundles/jquery/jqueryval")

    @Styles.Render("~/Content/plugin/scroll")

    @Scripts.Render("~/bundles/plugin/scroll")

    @Scripts.Render("~/bundles/kendo")

    <script>
        kendo.culture("en-US");
    </script>

    @Scripts.Render("~/bundles/lfe/common")

    @Scripts.Render("~/Areas/UserPortal/bundles/lfe")

    <script type="text/javascript">
        var notificationManager;


        function getNotifManagerInstance() {
            if (notificationManager == undefined || notificationManager == null) {
                notificationManager = new NotificationManager();
            }
            return notificationManager;
        }
    </script>
    @RenderSection("css", false)
    @RenderSection("scripts", false)
    <style>
        html {margin: 0;padding: 0;width: 100%;height: 100%;background: #343c43}
        body {background-color: inherit;color: #333;font-family: Calibri;margin: 0;padding: 0;height: 100%}
        .wrap {width: 495px;margin: 0 auto;padding: 0 1px}
        label.title {display: block;font-family: Arial;font-size: 15px;font-weight: bold;color: #fff}
        #main {clear: both;height: 100%;position: relative}
        .validation-summary-errors {margin: 0 auto;text-align: center;width: 100%}
        .reg-form .validation-summary-errors { text-align: left }
    </style>
</head>
	<body>
	  
		<header class="login"></header>
		<div class="wrap" id="main">
			@RenderBody()
		</div>
		
		<div id="site-loader" class="k-loading-mask" style="width: 100%; height: 100%; top: 0; left: 0;display: none; -ms-opacity: 0.5; opacity: 0.5;background-color: #cfcfcf">
			<span class="k-loading-text">Loading...</span>
			<div class="k-loading-image"></div>
			<div class="k-loading-color"></div>
		</div>
			
		<script type="text/x-kendo-template" id="form-loader-template">
				<span class="k-loading-text">Loading...</span>
				<div class="k-loading-image"></div>
				<div class="k-loading-color"></div>		    
		</script>
	
	</body>
</html>
