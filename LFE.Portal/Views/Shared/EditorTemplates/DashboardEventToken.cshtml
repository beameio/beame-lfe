@model LFE.DataTokens.DashboardEventToken

<li class="row">
    <div class="inner">
        <div class="inline chk"><input type="checkbox" style="visibility:hidden;" /></div>
        <div class="inline color">
            <div class="k-button calendar">
                <div class="date-picker"></div>
                <span></span>
            </div>
        </div>
        <div class="inline name">@Html.TextBoxFor(x => x.Name, new { @placeholder = "Type event name", @style = "height:22px;width:175px;position:relative;top:-3px;" })</div>
        <div class="inline date">
            <div style="position:relative;top:-4px;">
                @(Html.Kendo().DatePickerFor(m => m.Date).HtmlAttributes(new { @style = "width:105px;" }))
            </div>            
        </div>
        <div class="inline controls">
            <a class="k-button k-button-icontext k-update-button" href="\\#"></a>
            <a class="k-button k-button-icontext k-cancel-button" href="\\#"></a>
        </div>
    </div>
</li>


