@model LFE.DataTokens.CoursePurchaseDTO

@{
    ViewBag.Title = Model.CourseName + " by " + Model.User.fullName;
    Layout = "~/Areas/widget/Views/Shared/_WidgetLayout.cshtml";
    
}
@{ var viewModel = (LFE.DataTokens.BaseModelViewToken)ViewBag.MainLayoutViewModel; }

@section css
{
    <link href="@Url.Action("CourseIntroCss", "Style", new { trackingID = viewModel != null && viewModel.WebStore != null ? viewModel.WebStore.TrackingID : "" , lastUpdate = viewModel == null || viewModel.WebStore == null ? 0 : (int)(viewModel.WebStore.LastUpdate - new DateTime(1970, 1, 1)).TotalSeconds })" rel="stylesheet" />
    
}

@section JS
{
    <script type="text/javascript" src="http://admin.brightcove.com/js/BrightcoveExperiences.js"></script>
    <script type="text/javascript" src="http://admin.brightcove.com/js/APIModules_all.js"></script>
    <script src="~/Areas/Widget/Scripts/lfe/lfe.global.js"></script>
    <script src="~/Areas/Widget/Scripts/lfe/notif.manager.js"></script>
    <script src="~/Areas/Widget/Scripts/lfe/lfe.bcl.player.js"></script> 
    <script>
                        saveEventApi(USER_EVENTS.COURSE_PREVIEW_ENTER, '@Model.TrackingID', '@Model.CourseId', null, null,null);
    </script>     
}


@Html.Partial("Course/_Course")