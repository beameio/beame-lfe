@using LFE.Portal.Areas.Widget.Models
@model BundleContentsPageToken

<ul class="ul-item-content-list bundle-course-list">
    @{
        foreach (var course in Model.courses)
        {
            <li data-val="@course.id" class="li-video" title="click to preview">
                    @{
                        if (Model.mode == ePageMode.Viewer)
                        {
                            <a href="@course.pageUrl" title="click to view">
                                @Html.Partial("~/Areas/Widget/Views/Shared/Item/Bundle/_BundleCourseBox.cshtml", course)
                            </a>
                        }
                        else
                        {
                            @Html.Partial("~/Areas/Widget/Views/Shared/Item/Bundle/_BundleCourseBox.cshtml", course)
                        }
                    }
               
            </li>
        }
    }
</ul>

@{
    if (Model.mode == ePageMode.Product)
    {
        <!-- Modal -->
        <div class="modal fade" id="modCoursePreview" tabindex="-1" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title"></h4>
                    </div>
                    <div class="modal-body">
                        <div class="inner nano" id="bundle-content">
                            <div class="content">
                                <div class="modal-body-wrapper"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}