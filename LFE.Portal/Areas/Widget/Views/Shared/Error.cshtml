@using LFE.Core.Utils
@using LFE.Portal.Areas.AuthorAdmin.Helpers
@using LFE.Portal.Helpers

<!DOCTYPE html>

<html>
<head>
    <link href='//fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
    <meta name="viewport" content="width=device-width" />
    <title>LFE | Error Page</title>

    <link href="~/Areas/Widget/Content/styles/widget.css" rel="stylesheet" />

        @Styles.Render("~/Content/kendo/" + Url.ToKendoVersionUrl() + "/css")
        <script src="~/Scripts/modernizr-2.8.2.min.js"></script>    
    <script src="~/Scripts/jquery/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/jquery/jquery.migrate.1.2.1.min.js"></script>
    
    @Scripts.Render("~/bundles/kendo")
   
    <script>
        kendo.culture("en-US");
    </script>

    <script>
        $(document).ready(function () {
            window.parent.postMessage(document.location.href, '*');
        });
    </script>
</head>
<body>


    <!-- page content -->
    <div class="page_content" style="margin:20px" >
    <h1 style="font-size:22px;font-weight:bold;padding-top:20px;">Technical problems</h1>
        <div style="padding-left:3px;margin-top:20px;">
            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage as string))
            {                
                <p>ViewBag.ErrorMessage</p>
            }
            else
            { 
            <p>
                We are having some minor technical problems, which prevented us from completing the task you were doing.
                <br />
                Our technical team was notified of the problem, please try again what you were doing in a few minutes.
                <br /><br />
                We are sorry for the inconvenience.
            </p>
            }
        </div>
        </div>
    <!-- tools bar -->
    <div class="tool_bar">
        <div class="logo">
            <img src="/content/images/webstore/logo.jpg" width="16" height="16" alt="logo" />
        </div>
        <div class="power"><a href="@(Utils.GetKeyValue("homeUrl"))" target="_blank">@(Constants.APP_OFFICIAL_NAME)</a></div>
    </div>

    <div class="dark" style="display: none"></div>

    @{
        string fbappid = Utils.GetKeyValue("fbAppId");
    }
    <script type="text/javascript">
        var facebookAppId = '@fbappid';
    </script>
    <script src="~/Scripts/facebookApi.js" type="text/javascript"></script>

</body>
</html>
