@using LFE.Portal.Areas.Widget.Models
@model LFE.DataTokens.WidgetTrainingRegistrantDTO
<script> hideLoader();</script>
<div class="user-g2t-register-container">
    <div class="head">
        @Html.Partial("Training/_Header", new TrainingTimerToken
            {
                Start        = Model.EventDate
                ,LoadTimer   = true
                ,ContainerId = "g2t-user-form-timer"
                ,Template    = "<span>{days} days,</span><span>{hours} hours,</span><span>{minutes} minutes </span><span>and {seconds} seconds</span>"
            })
    </div>

    <div class="g2t-details-container">
        @Html.Partial("Training/_EditNotificationSettingsForm",Model)
    </div>
    
    <div class="g2t-foot">
        <div class="float-left">
            @Html.Partial("Training/_FooterLinks",new TrainingFooterLinksToken
            {
                Item          = Model.Item
                ,AuthorEmail  = Model.AuthorEmail
                ,State        = eUserG2TStates.UpdateSettings
                ,RegistrantId = Model.RegistrantId
            })
        </div>
        <div class="float-right">
            @Html.Partial("Training/_ActionButton", new TrainingButtonToken { Text = "Update Settings" })
        </div>
    </div>
</div>