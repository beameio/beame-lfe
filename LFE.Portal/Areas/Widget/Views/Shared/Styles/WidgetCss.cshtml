@model LFE.DataTokens.WidgetWebStoreDTO

@{
    Layout = null;
    var fontColor         = "#000";
    var backgroundColor   = "#FFF";
    //var tabsColor         = "#006699";
    var titleHeight       = "100px";
    var bodyBorder        = "";
    var bodyTransparent   = "";
    var selectedPageColor = "#fb2d00";   
    
    if (Model != null)
    {    
        fontColor = string.IsNullOrEmpty(Model.FontColor) ? "#000" : Model.FontColor;
        backgroundColor = string.IsNullOrEmpty(Model.BackgroundColor) ? "#FFF" : Model.BackgroundColor;
        //tabsColor = string.IsNullOrEmpty(Model.TabsFontColor) ? "#006699" : Model.TabsFontColor;

        titleHeight = Model.IsShowTitleBar ? "100px" : "70px";
        

        if (Model.IsShowBorder)
        {
            bodyBorder = "border:solid 2px " + fontColor  + ";";
        }
    
        if (Model.IsTransParent)
        {
            bodyTransparent = "background-color: transparent;";
        }

        if (!string.IsNullOrEmpty(Model.TabsFontColor))
        {
            selectedPageColor = Model.TabsFontColor;
        }
    }
}

