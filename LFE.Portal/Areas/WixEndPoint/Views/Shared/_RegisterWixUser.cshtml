@using LFE.DataTokens
@using LFE.Portal.Areas.WixEndPoint.Helpers

@model WixUserRegisterDTO

@{
    var returnUrl = Url.ToWixLoginHandlerUrl(Model.instanceToken, Model.compId, Model.origCompId);
}

@using (Html.BeginForm("RegisterWixUser", "Account", new { area = "", ReturnUrl = returnUrl, RequiredConfirmation = false }, FormMethod.Post, new { @id = "frmRegisterWixUser", @class = "reg-form" }))
{
       <ul class="simple-list">
        <li>@Html.TextBoxFor(m => m.Nickname, new { @placeholder = "Nickname" }) @Html.ValidationMessageFor(model => model.Nickname)</li>
        <li>
            @Html.TextBoxFor(m => m.FirstName, new { @placeholder = "First name", @style = "", @class = "inline inp-name-w" }) @Html.ValidationMessageFor(model => model.FirstName)
            @Html.TextBoxFor(m => m.LastName, new { @placeholder = "Last name", @style = "", @class = "inline inp-name-w" }) @Html.ValidationMessageFor(model => model.LastName)
        </li>
        <li>@Html.TextBoxFor(m => m.Email, new { @placeholder = "Email", @type = "email" }) @Html.ValidationMessageFor(model => model.Email)</li>
        <li>@Html.TextBoxFor(m => m.Password, new { @placeholder = "Password, minimum 8 chars length", type = "password" }) @Html.ValidationMessageFor(model => model.Password)</li>
        <li>@Html.TextBoxFor(m => m.ReenterPassword, new { @placeholder = "Reenter password", type = "password" }) @Html.ValidationMessageFor(model => model.ReenterPassword)</li>
        <li><input type="submit" class="submit btn connect" value="Register" style="bottom: 6px" /></li>
    </ul>    
}
