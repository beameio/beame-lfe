@model HandleErrorInfo

@{
    ViewBag.Title = "Error";
}

<hgroup class="title">
    <h1 class="error">Error.</h1>
    <h2 class="error">An error @(Model!=null && !String.IsNullOrEmpty(Model.Exception.Message) ? " - " +  Model.Exception.Message + " - " : string.Empty ) occurred while processing your request.</h2>
</hgroup>
