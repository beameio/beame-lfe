@model LFE.Portal.Models.UdemyLoginToken

@{
    ViewBag.Title = "Udemy Import";
    Layout = "~/Areas/AuthorAdmin/Views/Shared/_Layout.cshtml";
}

@section css
{
    <link href="~/Areas/AuthorAdmin/Content/styles/udemy.css" rel="stylesheet" />
}


<div class="mc-header">
    <h1>UDEMY INTEGRATION</h1>
</div>
@{
    if (!Model.IsValid)
    {
        <div class="mc-errorBox">
            <div class="header"><h2>Errors</h2></div>
            <div class="content">
                @Html.Raw(Model.Message)
            </div>
        </div>
    }
}

<div class="mc-content">
    <h2>Welcome to the Udemy Import Module</h2>
    <div style="margin-bottom: 50px;">We want to see your classrooms grow, and your sales to skyrocket, This means ensuring that you can communicate with  your learners as a routine. Our goal is to make this communication simple and effective. In order to start, these 3 steps should be completed:</div>

    @Html.Partial("Udemy/_LoginPartial", Model)

</div>
