@using LFE.Portal.Helpers

<!DOCTYPE html>
<html>
	<head prefix="og: http://ogp.me/ns# fb: http://ogp.me/ns/fb# learnfromexpirence: http://ogp.me/ns/fb/learnfromexpirence#">
		<title>@ViewBag.Title</title>
		<!--[if ie]><meta http-equiv="X-UA-Compatible" content="IE=Edge" /><![endif]-->
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0">

	    @Html.Partial("~/Views/Shared/Common/_HeaderCssLinks.cshtml")
        @Html.Partial("~/Views/Shared/Common/_ReferrerScripts.cshtml")
        <link href="~/Content/styles/reset.css" rel="stylesheet" />
	    <link href="~/Content/styles/site.css" rel="stylesheet" />
	    <style>
    	    /*login*/
            .k-window{ border-radius: 0;border: none !important }
            .wnd-modal-login{ border-radius: 0;width: 350px;height: 505px;}
            .k-pager-wrap{ border: none;background: transparent;box-shadow: none}

            /*bootstrap overrides*/
            .modal{overflow: hidden;z-index: 1011001}
            .modal-dialog{margin: 10px auto}
            .modal-body{border-radius: 0}
            .modal-header{border: none; border-radius: 0;height:70px ;background: #2575aa;color: #fff;}
            .modal-header h4,.modal-header .modal-title{font-size: 24px;color: #fff;margin-right: 70px}
            .modal-header .modal-title{text-transform: capitalize}
            .modal-header .close{background:none repeat scroll 0 0 #17496e;color:#fff;font-size:40pt;font-weight:normal;height:69px;margin:0;opacity:1;padding:0;position:absolute;right:0;top:0;width:70px}
            .form-horizontal label{ font-size: 12px;font-weight: normal}
            .form-horizontal textarea{resize:none}
            .nav-tabs > li > a {text-transform: capitalize}
            .lbl-span{display: block}
            .login-wnd-container {width: 320px !important;}
    	</style>
        @Styles.Render("~/bundles/styles/bootstrap")
	    @RenderSection("css", false)	
        @Scripts.Render("~/bundles/jqueryval")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/kendo/widget")
        <link href="~/Areas/WidgetEndPoint/Content/main.css" rel="stylesheet" />

	    <script src="~/Scripts/lfe/lfe.global.js"></script>
        @Html.Partial("~/Views/Shared/Common/_FacebookScript.cshtml")
        <script src="~/Scripts/facebookApi.js"></script>
	    <script>
    	    var notifEvents = {
                object: {
                    objectSaved: 'object/Saved',
                    objectDeleted: 'object/Deleted',
                    openLogin: 'open/Login'
                }
            };
    	</script>
	</head>
	<body>
	    
	    <div class="wrap" id="main">	        
	        @RenderBody()
	    </div>
        <script>
            var DEFAULT_CONTAINER_SELECTOR = '#main';
        </script>

        @RenderSection("JS", required: false)
	    
       

        @Html.Partial("~/Views/Shared/Common/_LoaderTemplate.cshtml")
        @Html.Partial("~/Views/Shared/Common/_NotificationManagerScript.cshtml")
        @Html.Partial("~/Views/Shared/Common/_ZendeskScripts.cshtml")
	</body>
</html>
